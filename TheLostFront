local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local Lighting = game:GetService("Lighting")

local player = Players.LocalPlayer

local PRIMARY = Color3.fromRGB(18, 18, 18)
local SECONDARY = Color3.fromRGB(40, 40, 40)
local TEXT_MAIN = Color3.fromRGB(255, 255, 255)
local TEXT_SECONDARY = Color3.fromRGB(180, 180, 180)

local YOUTUBE_LINK = "https://www.youtube.com/@ZenwareScript"
local DISCORD_LINK = "https://discord.gg/JFpzR7Cv"

local function createSubscribePopup()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "SubscribePopup"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = player:WaitForChild("PlayerGui")

    UserInputService.MouseBehavior = Enum.MouseBehavior.Default

    local blur = Instance.new("BlurEffect")
    blur.Size = 0
    blur.Parent = Lighting
    TweenService:Create(blur, TweenInfo.new(0.35, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), { Size = 18 }):Play()

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 0, 0, 0)
    frame.Position = UDim2.new(0.5, 0, 0.5, 0)
    frame.AnchorPoint = Vector2.new(0.5, 0.5)
    frame.BackgroundColor3 = PRIMARY
    frame.BorderSizePixel = 0
    frame.Active = true
    frame.Draggable = true
    frame.Parent = screenGui
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

    TweenService:Create(frame, TweenInfo.new(0.35, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        Size = UDim2.new(0, 380, 0, 220)
    }):Play()

    local function createLabel(text, posY)
        local label = Instance.new("TextLabel")
        label.Text = text
        label.Size = UDim2.new(1, -20, 0, 28)
        label.Position = UDim2.new(0, 10, 0, posY)
        label.BackgroundTransparency = 1
        label.TextScaled = true
        label.Font = Enum.Font.Gotham
        label.TextColor3 = TEXT_MAIN
        label.Parent = frame
        return label
    end

    createLabel("Zenware", 5).TextXAlignment = Enum.TextXAlignment.Left
    createLabel("Would you consider subscribing?", 35)

    local closeButton = Instance.new("TextButton")
    closeButton.Text = "Ã—"
    closeButton.Size = UDim2.new(0, 26, 0, 26)
    closeButton.Position = UDim2.new(1, -32, 0, 6)
    closeButton.BackgroundTransparency = 1
    closeButton.TextColor3 = TEXT_SECONDARY
    closeButton.Font = Enum.Font.GothamBold
    closeButton.TextScaled = true
    closeButton.Parent = frame

    local function createButton(text, posY)
        local btn = Instance.new("TextButton")
        btn.Text = text
        btn.Size = UDim2.new(1, -40, 0, 40)
        btn.Position = UDim2.new(0, 20, 0, posY)
        btn.BackgroundColor3 = SECONDARY
        btn.BorderSizePixel = 0
        btn.TextColor3 = TEXT_MAIN
        btn.Font = Enum.Font.GothamMedium
        btn.TextScaled = true
        Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
        btn.Parent = frame
        return btn
    end

    local ytButton = createButton("Copy YouTube Link", 85)
    local dcButton = createButton("Copy Discord Link", 135)

    local infoText = Instance.new("TextLabel")
    infoText.Text = "Paste the YouTube link in a browser to subscribe!"
    infoText.Size = UDim2.new(1, -20, 0, 25)
    infoText.Position = UDim2.new(0, 10, 1, -30)
    infoText.BackgroundTransparency = 1
    infoText.TextScaled = true
    infoText.Font = Enum.Font.Gotham
    infoText.TextColor3 = TEXT_SECONDARY
    infoText.Parent = frame

    local function closePopup()
        TweenService:Create(blur, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), { Size = 0 }):Play()
        task.wait(0.25)
        blur:Destroy()
        screenGui:Destroy()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/larsscriptz/Scripts/refs/heads/main/Loadstring", true))()
    end

    closeButton.MouseButton1Click:Connect(closePopup)

    ytButton.MouseButton1Click:Connect(function()
        setclipboard(YOUTUBE_LINK)
        StarterGui:SetCore("SendNotification", {
            Title = "Copied!";
            Text = "YouTube link copied.";
            Duration = 3;
        })
        closePopup()
    end)

    dcButton.MouseButton1Click:Connect(function()
        setclipboard(DISCORD_LINK)
        StarterGui:SetCore("SendNotification", {
            Title = "Copied!";
            Text = "Discord link copied.";
            Duration = 3;
        })
        closePopup()
    end)
end

createSubscribePopup()
